<form enctype="multipart/form-data"
      method="post"
      class="p-6 rounded-md bg-white border-2 border-slate-200 drop-shadow-sm">
    <div class="flex flex-col gap-3">
        <div>
            <label for="city"
                   class="text-gray-500 block mb-1 font-medium">Which city are you in:</label>
            <input type="text"
                   name="city"
                   class="w-full"
                   id="city">
        </div>
        <fieldset class="border-slate-150 border-2 rounded-md p-3">
            <legend class="mt-3 mx-2 px-2 text-gray-800 font-medium dark:text-gray-300">Imperial or Metric format?</legend>
            <div class="grid grid-rows-2 md:grid-cols-2 gap-3">
                <div class="flex flex-row gap-1 hover:bg-slate-50 rounded-md transition ease-in-out delay-50 duration-100 hover:ring-2 hover:ring-slate-200 hover:ring-inset p-2 items-center">
                    <div class="p-3">
                    <input type="radio" name="unit" id="unit-imperial" value="imperial"
                           class="hover:cursor-pointer w-5 h-5 bg-purple-100 border-purple-950 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                    </div>
                    <label class="hover:cursor-pointer block" for="unit-imperial">
                        <span class="font-medium">Imperial</span>
                        <span id="helper-radio-text"
                              class="text-xs font-normal text-gray-500 dark:text-gray-300 block">
                            Use miles and degrees Fahrenheit.
                        </span>
                    </label>
                </div>
                <div class="flex flex-row gap-1 hover:bg-slate-50 rounded-md transition ease-in-out delay-50 duration-100 hover:ring-2 hover:ring-slate-200 hover:ring-inset p-2 items-center">
                    <div class="p-3">
                        <input type="radio" name="unit" id="unit-metric" value="metric"
                               class="hover:cursor-pointer w-5 h-5 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                    </div>
                    <label class="hover:cursor-pointer block" for="unit-metric">
                        <span class="font-medium">Metric</span>
                        <span id="helper-radio-text"
                              class="text-xs font-normal text-gray-500 dark:text-gray-300 block">
                        Use kilometres and degrees celsius.
                    </span>
                    </label>
                </div>
            </div>
        </fieldset>
        <hr class="my-2">
        <input type="submit"
               name="submit"
               value="Search"
               class="p-2 px-6 text-center border-4 border-purple-950 bg-purple-900 rounded-md text-white hover:cursor-pointer transition ease-in-out delay-100 hover:bg-purple-800 duration-150">
    </div>
</form>
